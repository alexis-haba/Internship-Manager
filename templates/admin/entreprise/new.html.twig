{% extends 'base.html.twig' %}

{% block title %}Nouvelle Entreprise{% endblock %}

{% block body %}
    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-12 col-md-8 col-lg-6 mx-auto">
                <h1 class="h3 mb-4">Nouvelle Entreprise</h1>
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    <div class="mb-3">
                        {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le nom'}}) }}
                        {{ form_errors(form.nom) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.secteur, 'Secteur', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.secteur, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le secteur'}}) }}
                        {{ form_errors(form.secteur) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.contact, 'Contact', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.contact, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le contact'}}) }}
                        {{ form_errors(form.contact) }}
                    </div>
                    <button type="submit" class="btn btn-primary">Cr√©er</button>
                    <a href="{{ path('admin_entreprise_index') }}" class="btn btn-secondary ms-2">Annuler</a>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}