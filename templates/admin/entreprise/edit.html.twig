{% extends 'base.html.twig' %}

{% block title %}Modifier une entreprise{% endblock %}

{% block content %}
    <h2>Modifier l'entreprise</h2>
    {{ form_start(form, {'attr': {'class': 'col-md-6'}}) }}
        <div class="mb-3">
            {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.nom) }}
        </div>
        <div class="mb-3">
            {{ form_label(form.secteur, 'Secteur', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.secteur, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.secteur) }}
        </div>
        <div class="mb-3">
            {{ form_label(form.contact, 'Contact', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.contact, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.contact) }}
        </div>
        <button type="submit" class="btn btn-primary">Enregistrer</button>
        <a href="{{ path('admin_entreprise_index') }}" class="btn btn-secondary">Retour</a>
    {{ form_end(form) }}
{% endblock %}